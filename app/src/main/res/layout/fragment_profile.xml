<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="662dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ProFile"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/Circular"
            android:backgroundTint="@color/black"
            app:srcCompat="@drawable/profile_pic1"
            android:layout_marginTop="15dp"
            />

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:cardCornerRadius="90dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            >-->
        <!--            <ImageView-->
        <!--                android:layout_width="90dp"-->
        <!--                android:layout_height="90dp"-->
        <!--                android:src="@drawable/profile_pic1"-->
        <!--                android:layout_gravity="center"-->
        <!--                android:scaleType="fitXY"-->
        <!--                ></ImageView>-->
        <!--        </androidx.cardview.widget.CardView>-->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="User Name "
            android:textSize="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileEditBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_profile_button"
            android:text="Edit"
            android:textColor="@color/white"
            app:iconTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DonationHistory"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:text="Donation History"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:backgroundTint="@color/white"
            app:icon="@drawable/clock"
            app:iconTint="@null"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/helpBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:text="Help and FAQs"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:backgroundTint="@color/white"
            app:icon="@drawable/help"
            app:iconTint="@null"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logOutProfileBtn"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@drawable/edit_profile_button"
            android:text="LogOut"
            android:textColor="@color/white"
            app:iconTint="@null" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>